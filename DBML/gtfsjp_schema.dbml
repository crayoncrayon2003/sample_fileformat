// -----------------------------------
// GTFS-JP Core Tables
// -----------------------------------

Table agency {
  agency_id varchar [pk]
  agency_name varchar
  agency_url varchar
  agency_timezone varchar
  agency_lang varchar
  agency_phone varchar
  agency_fare_url varchar
  agency_email varchar
}

Table stops {
  stop_id varchar [pk]
  stop_code varchar
  stop_name varchar
  stop_desc varchar
  stop_lat float
  stop_lon float
  zone_id varchar
  stop_url varchar
  location_type int
  parent_station varchar
  stop_timezone varchar
  wheelchair_boarding int
  level_id varchar
  platform_code varchar
}

Table routes {
  route_id varchar [pk]
  agency_id varchar [ref: > agency.agency_id]
  route_short_name varchar
  route_long_name varchar
  route_desc varchar
  route_type int
  route_url varchar
  route_color varchar
  route_text_color varchar
}

Table trips {
  trip_id varchar [pk]
  route_id varchar [ref: > routes.route_id]
  service_id varchar [ref: > calendar.service_id]
  trip_headsign varchar
  trip_short_name varchar
  direction_id int
  block_id varchar
  shape_id varchar
  wheelchair_accessible int
  bikes_allowed int
}

Table stop_times {
  trip_id varchar [ref: > trips.trip_id]
  arrival_time time
  departure_time time
  stop_id varchar [ref: > stops.stop_id]
  stop_sequence int
  stop_headsign varchar
  pickup_type int
  drop_off_type int
  shape_dist_traveled float
  timepoint int
}

Table calendar {
  service_id varchar [pk]
  monday int
  tuesday int
  wednesday int
  thursday int
  friday int
  saturday int
  sunday int
  start_date date
  end_date date
}

Table calendar_dates {
  service_id varchar [ref: > calendar.service_id]
  date date
  exception_type int
}

// -----------------------------------
// GTFS-JP Optional Tables
// -----------------------------------

Table fare_attributes {
  fare_id varchar [pk]
  price float
  currency_type varchar
  payment_method int
  transfers int
  agency_id varchar
  transfer_duration bigint
}

Table fare_rules {
  fare_id varchar [ref: > fare_attributes.fare_id]
  route_id varchar [ref: > routes.route_id]
  origin_id varchar
  destination_id varchar
  contains_id varchar
}

Table shapes {
  shape_id varchar [pk]
  shape_pt_lat float
  shape_pt_lon float
  shape_pt_sequence int
  shape_dist_traveled float
}

Table frequencies {
  trip_id varchar [ref: > trips.trip_id]
  start_time time
  end_time time
  headway_secs int
  exact_times int
}

Table transfers {
  from_stop_id varchar [ref: > stops.stop_id]
  to_stop_id varchar [ref: > stops.stop_id]
  transfer_type int
  min_transfer_time int
}

Table pathways {
  pathway_id varchar [pk]
  from_stop_id varchar [ref: > stops.stop_id]
  to_stop_id varchar [ref: > stops.stop_id]
  pathway_mode int
  is_bidirectional int
  length float
  traversal_time int
  stair_count int
  max_slope float
  min_width float
  signposted_as varchar
  reversed_signposted_as varchar
}

Table levels {
  level_id varchar [pk]
  level_index float
  level_name varchar
}

// -----------------------------------
// GTFS-JP Extension Tables (日本独自拡張)
// -----------------------------------

Table agency_jp {
  agency_id varchar [pk, ref: > agency.agency_id]
  agency_postal varchar
  agency_address varchar
}

Table jp_offices {
  office_id varchar [pk]
  office_name varchar
  office_url varchar
  office_phone varchar
  office_address varchar
}

Table jp_lines {
  line_id varchar [pk]
  line_code varchar
  line_symbol varchar
  line_name varchar
  line_color varchar
  line_sort_order int
}

Table jp_operators {
  operator_id varchar [pk]
  operator_name varchar
  operator_url varchar
  operator_phone varchar
  operator_address varchar
}

Table jp_stop_offices {
  stop_id varchar [ref: > stops.stop_id]
  office_id varchar [ref: > jp_offices.office_id]
}

Table jp_route_lines {
  route_id varchar [ref: > routes.route_id]
  line_id varchar [ref: > jp_lines.line_id]
}

// -----------------------------------
// その他 NGSI変換や可視化のために必要な情報
// （例：translations、feed_info）
// -----------------------------------

Table translations {
  table_name varchar
  field_name varchar
  language varchar
  translation varchar
  record_id varchar
}

Table feed_info {
  feed_publisher_name varchar
  feed_publisher_url varchar
  feed_lang varchar
  feed_start_date date
  feed_end_date date
  feed_version varchar
}
